<div class="container">
  <h3>Menu Collections</h3>
<form action="/restaurant/create", method="post" enctype="multipart/form-data">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="url">url</label>
    <input type="text" class="form-control" id="url-input" placeholder="" name="url">
  </div>
  <div class="form-group">
    <p class="help-block"> upload the csv file </p>
    <label for="exampleInputFile">zip file must contain Menu.csv MenuPage.csv MenuItem.csv Dish.csv</label>
    <input type="file" id="file-input" name="file">
  </div>
  <button type="submit" class="btn btn-default" id="upload-btn">Submit</button>

  <p style="margin-top: 20px; color: red">* Import data may use 10 minutes, please wait....</p>
</form>


<% if false %>
<%= form_for @menu, html: { multipart: true } do |f| %>
      <%= f.file_field :attachment %>
      <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
<% end %>
</div>


<script type="text/javascript">
$(function(){
  $('#upload-btn').click(function(e){
    var url = $('#url-input').val()    
    var file = $('#file-input').val()    

    if(url == '' && file == ''){
      alert("please fill url or select one file") 
      return false
    }

  })
})
</script>
